import { useState } from 'react'
import { Title, Input, ToggleButton } from './{{properCase name}}.styles'

export type {{ properCase name }}Props = {
	className?: string
	title: string
}

export const {{ properCase name }} = ({ className, title }: {{ properCase name }}Props) => {
	const [on, setOn] = useState(false)

	const toggle = () => setOn(!on)

	return (
		<>
			<Title className={className}>{title}</Title>
			<Input type="checkbox" />
			<ToggleButton on={on} aria-expanded={on} onClick={toggle} />
		</>
	)
}
